<%- include('header'); -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <!-- <span class="subheading">A Blog Theme by Start Bootstrap</span> -->
          </div>
        </div>
      </div>
    </div>
  </header>



  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% post.forEach(function(i) {  %>
          
        

          <% i.posts.forEach(function(el){%> 
              
            
            <div class="post-preview">
              <a href="/post/<%=  el._id %>" >
                <h2 class="post-title">
                <%= el.heading %>
                </h2>
                <div class="fluid-container" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis">
                 <em> <%=  el.desc %> </em>
                </div>
              </a>
              <p class="post-meta"><%= el.name %> <%=  el.date %>
                
              </p>
            </div>
            <hr>

            
      
        
            <% }) %> 
        <% }) %>
          
        
        <!-- Pager-->
        <div class="clearfix">
        
          <a class="btn btn-primary float-right" href="/login">Add Post &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

 
  <%- include('footer'); -%>
