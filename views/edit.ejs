<%- include('header'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>Man must explore, and this is exploration at its greatest</h1>
            <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
            
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
         
          <% post.forEach(function(i) {  %>
            <% if(i._id == blogid) {%> 
          <form action='/updated/<%= i._id %>' method="POST" novalidate>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Name</label>
                <input type="text" class="form-control" value="<%= i.name %>" name="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
  
            
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Top Heading</label>
                <input type="text" class="form-control" value="<%= i.heading %>" name="heading" required data-validation-required-message="Please enter heading.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            
            
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Message</label>
                <textarea rows="5" class="form-control" value="<%= i.desc %>" id="message" name="desc" required data-validation-required-message="Please enter a message."></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <br>
            <div id="success"></div>
            <button type="submit" class="btn btn-primary" >Send</button>
          </form>
          <% } %>
          <% }) %>
          <p></p>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
 
  <%- include('footer'); -%>